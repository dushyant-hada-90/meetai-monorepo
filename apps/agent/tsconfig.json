{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}